<span id="top-nav-l-span" class="top-nav-cell">
  <a href="<%= LCTV_URL %>" id="top-nav-logo-a">
    <%= image_tag 'lctv-users-logo.png' , :alt => 'livecoding.tv logo' %>
  </a>
</span>

<span id="top-nav-c-span" class="top-nav-cell">
  <a href="/">Home</a>
  <a href="<%= LCTV_PROJECTS_URL  %>">Projects</a>
  <a href="<%= LCTV_USERS_URL     %>">Users</a>
  <a href="<%= LCTV_FORUM_URL     %>">Forum</a>
  <a href="<%= LCTV_POLLS_URL     %>">Polls</a>
  <a href="<%= LCTV_BADGES_URL    %>">Badges</a>
  <a href="<%= LCTV_EMOTICONS_URL %>">Emoticons</a>
</span>

<span id="top-nav-r-span" class="top-nav-cell">
  <% if not signed_in? %>
    <a href="<%= signin_path %>"   ><span id="signin-span">LOGIN</span></a>
    <a href="<%= LCTV_URL %>signup"><span id="signup-span">SIGN UP</span></a>
  <% else %>
    <% mail_url   = LCTV_URL + current_user.nick   + '/settings/messages/'      %>
    <% alerts_url = LCTV_URL + current_user.nick   + '/settings/notifications/' %>
    <% fans_url   = LCTV_URL + current_user.nick   + '/settings/followers/'     %>
    <% user_url   = LCTV_URL + current_user.nick   + '/'                        %>
    <% avatar_url =            current_user.avatar                              %>

    <a href="<%= mail_url     %>" id="top-nav-mail-a"  >
      <%= image_tag 'mail.png'    , :id  => 'top-nav-mail-img'   , :alt => "messages"      %>
    </a>
    <a href="<%= alerts_url   %>" id="top-nav-alerts-a">
      <%= image_tag 'bell.png'    , :id  => 'top-nav-alerts-img' , :alt => "notifications" %>
    </a>
    <a href="<%= fans_url     %>" id="top-nav-fans-a"  >
      <%= image_tag 'follows.png' , :id  => 'top-nav-fans-img'   , :alt => "follows"       %>
    </a>
    <a href="<%= signout_path %>" id="top-nav-user-a"  >
      <%= image_tag avatar_url    , :id  => 'top-nav-user-img'   , :alt => "avatar"        %>
    </a>
  <% end %>
</span>
