
<%= render :partial => 'shared/edit_nav' , :locals => { :object     => @user      ,
                                                        :index_path => users_path } %>


<h1>Editing <%= @user.nick %>'s Profile</h1>

<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if admin? %>
    <div class="field">
      <%= f.label      :nick %><br>
      <%= f.text_field :nick %>
    </div>
    <div class="field">
      <%= f.label      :uid %><br>
      <%= f.text_field :uid %>
    </div>
    <div class="field">
      <%= f.label     :is_admin %><br>
      <%= f.check_box :is_admin %>
    </div>
  <% else %>
      <%= f.hidden_field :nick     %>
      <%= f.hidden_field :uid      %>
      <%= f.hidden_field :is_admin %>
  <% end %>

  <div class="field">
    <%= f.label      :bio %><br>
    <%= f.text_field :bio %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

