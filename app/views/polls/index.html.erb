<p><%= link_to 'New Poll' , new_poll_path %></p>

<h1>Listing polls</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <% if admin? %>
        <th></th>
        <th></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @polls.each do |poll| %>
      <% next unless poll.is_open %>

      <tr>
        <td><%= link_to poll.topic , poll %></td>
        <% if admin? %>
          <td><%= link_to 'Edit', edit_poll_path(poll) %></td>
          <td><%= link_to 'Destroy', poll, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
